<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.itwill.running.repository.TImageDao">

	<insert id="insertTImage">
        insert into t_images (team_id, post_id, origin_name, uniq_name, image_path)
        	values (#{teamId}, #{postId}, #{originName}, #{uniqName}, #{imagePath})
    </insert>
    
    <select id="selectTImagesByPostId" resultType="TImage">
        select * from t_images 
        	where post_id = #{postId}
    </select>
    
    <select id="selectTImagesByTeamId" resultType="TImage">
        select * from t_images 
        	where team_id = #{teamId}
    </select>
    
    <delete id="deleteTImageByPostId">
    	delete from t_images
    		where post_id = #{postId}
    </delete>
</mapper>